rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite a los usuarios leer y escribir archivos solo dentro de su propia carpeta,
    // identificada por su User ID (uid).
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
